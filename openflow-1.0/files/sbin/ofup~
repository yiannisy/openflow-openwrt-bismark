#!/bin/sh
# Copyright (C) 2006 OpenWrt.org

/sbin/ofdown "$@"
. /etc/functions.sh
[ $# = 0 ] && { echo "  $0 <group>"; exit; }
[ "x$1" = "x-a" ] && {
	[ -e "/tmp/resolv.conf.auto" ] && rm /tmp/resolv.conf.auto
	config_cb() {
		echo "Configure Callback called"
		[ ofswitch != "$1" -o -z "$2" ] || eval "$0 $2"
	}
	config_load openflow
	exit
}
include /lib/openflow

scan_ofinterfaces

setup_ofswitch "$1"
setup_inband_control "$1"
setup_ofprotocol "$1"

# config_get dp "$1" dp


#ifname=`dpctl show ${dp} |awk '/^ LOCAL.*addr/ {split($1,a,"[()]");print a[2]}'`

# echo "My ifname is $ifname"

