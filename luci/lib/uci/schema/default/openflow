package openflow

config package
	option title	'openflow configuration'

config section
	option name	'ofswitch'
	option title	'openflow ofswitch'
	option package	'openflow'
	list   depends	'proto=static, ipaddr, netmask'
	list   depends	'proto=none'
	option named	'true'
	option required	'true'

config variable
	option name	'ifname'
	option title	'Physical ofswitch'
	option section	'openflow.ofswitch'

config variable
	option name	'macaddr'
	option title	'Interface MAC address'
	option section	'openflow.ofswitch'
	option datatype	'macaddr'

config variable
	option name	'ipaddr'
	option title	'IPv4 host address'
	option section	'openflow.ofswitch'
	option datatype	'ip4addr'

config variable
	option name	'netmask'
	option title	'IPv4 openflow mask'
	option section	'openflow.ofswitch'
	option datatype	'ip4addr'

config variable
	option name	'gateway'
	option title	'IPv4 gateway'
	option section	'openflow.ofswitch'
	option datatype	'ip4addr'

config variable
	option name	'ofports'
	option title	'Openflow Ports'
	option section	'openflow.ofswitch'
	option datatype	'string'

config variable
	option name	'ofctl'
	option title	'Openflow Controller'
	option section	'openflow.ofswitch'
	option datatype	'string'

config variable
	option name	'dp'
	option title	'Openflow Datapath'
	option section	'openflow.ofswitch'

config variable
	option name	'proto'
	option title	'Protocol'
	option section	'openflow.ofswitch'
	option type	'enum'
	option required	'true'

config enum
	option variable	'openflow.ofswitch.proto'
	option value	'none'
	option title	'Disabled'

config enum
	option variable	'openflow.ofswitch.proto'
	option value	'dhcp'
	option title	'Retrieve IP address via DHCP'
	option default	'true'

config enum
	option variable	'openflow.ofswitch.proto'
	option value	'static'
	option title	'Interface has static openflow configuration'

